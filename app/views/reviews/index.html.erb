 <div class="container px-4 px-lg-5 my-5">
     <div class="container">
         <h2 class="display-5 fw-bolder mt-3"><%= @drink.name %></h1>
         <p class="h5 font-weight-normal mt-4">星<%=params[:star]%>レビュー一覧</p>
         <div class="row">
             <div class="container col-md-9">
                 <% @reviews.each do |review| %>
                 <div class="card mt-3">
                     <div class="card-body border-bottom">
                         <%= attachment_image_tag review.user, :profile_image, format: 'jpeg', class: "img-circle pull-left profile-thumb mr-3", fallback: "no_image.jpg",size: "60x60" %>
                         <%= review.user.name%>さん
                     </div>
                     <div class="card-body">
                         <span class="star5_rating  border" data-rate=<%= review.star%>> </span>
                         <%= review.created_at.to_s(:datetime_jp)%>
                         <div class="card-body row">
                             <%= review.body%>
                         </div>
                     </div>
                 </div>
                 <% end %>
             </div>
         </div>
     </div>
 </div>