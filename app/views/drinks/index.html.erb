<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            <% @drinks.each do |drink| %>
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm" style="height:380px;">
                    <div class="bd-placeholder-img card-img-top" width="100%" height="225"
                        xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false"
                        role="img" aria-label="Placeholder: Thumbnail">
                        <title>Placeholder</title>
                        <% if @shop == "starbucks" %>
                            <% if rand(3) == 0 %>
                            <%= image_tag 'starbucks_coffee.png',class: "drink_image w-100" %>
                            <% elsif rand(3) == 1 %>
                            <%= image_tag 'stardrink2.jpeg',class: "drink_image w-100" %>
                            <% elsif rand(3) == 2 %>
                            <%= image_tag 'stardrink3.jpeg',class: "drink_image w-100" %>
                            <% else %>
                            <%= image_tag 'stardrink.jpeg',class: "drink_image w-100" %>
                            <% end %>
                        <% elsif @shop == "dotor" %>
                            <% if rand(3) == 0 %>
                            <%= image_tag 'dotor1.jpeg',class: "drink_image w-100" %>
                            <% elsif rand(3) == 1 %>
                            <%= image_tag 'dotor2.jpeg',class: "drink_image w-100" %>
                            <% elsif rand(3) == 2 %>
                            <%= image_tag 'dotor3.jpeg',class: "drink_image w-100" %>
                            <% else %>
                            <%= image_tag 'dotor4.jpeg',class: "drink_image w-100" %>
                            <% end %>
                        <% else %>
                            <% if rand(3) == 0 %>
                            <%= image_tag 'tullys1.jpeg',class: "drink_image w-100" %>
                            <% elsif rand(3) == 1 %>
                            <%= image_tag 'tullys2.jpeg',class: "drink_image w-100" %>
                            <% elsif rand(3) == 2 %>
                            <%= image_tag 'tullys3.jpeg',class: "drink_image w-100" %>
                            <% else %>
                            <%= image_tag 'tullys4.jpeg',class: "drink_image w-100" %>
                            <% end %>
                        <% end %>

                    </div>
                    <div class="card-body">
                        <p class="card-text"> <%= drink.name%></p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <%= link_to "Review", drink_path(drink), class: 'btn btn-sm btn-outline-secondary'%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% end %>
        </div>

    </div>
</div>