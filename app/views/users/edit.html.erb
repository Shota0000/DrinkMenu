<div class='container mt-3'>
    <div class='row'>
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h2 class="mt-3">User info</h2>
            <%= form_with model:@user, local:true do |f| %>
            <%= render 'layouts/errors', obj: @user %>
            <div class="form-group">
                <%= f.label :name %>
                <%= f.text_field :name, class: "form-control name" %>
            </div>
            <%= f.label :image %>
            <div class="form-group card">
                <div class="card-body">
                    <div class="user-edit-image text-center">
                        <%= attachment_image_tag @user, :profile_image, format: 'jpeg', class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg",size: "100x100" %>
                    </div>
                    <%= f.attachment_field :profile_image, class: "form-control-file user_image mt-3"%>
                </div>
            </div>
            <div class="form-group">
                <%= f.submit class: 'btn btn-secondary' %>
            </div>
            <% end %>
        </div>
    </div>